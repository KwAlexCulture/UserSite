@model BOL.CertifiedRecruitment;

@{
    ViewData["Title"] = "PrintStudentCertifiedRecruitment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 9pt;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div id="PrintPDF">
            <table cellpadding="0" cellspacing="0" style="border: 0px;font-size: 0pt;">
                <tr>
                    <th style=""> </th>
                    <th style=""> </th>
                </tr>

                <tr>
                    <td style="width:120px;border: 0px"> </td>

                </tr>
            </table>
        </div>
        <br />

        @using (Html.BeginForm("Export", "Service", FormMethod.Post))
        {
            string isStillEducatingResult;
            @if (Model.IsStillEducating == "Yes")
            {
                isStillEducatingResult = "________________";
            }
            else
            {
                isStillEducatingResult = "                                               " + Model.EducationDiscontinuityReason ;
            }
            <input type="hidden" name="ExportData" />
            <input type="submit" id="btnSubmit" value="Export" />
            <input style="color:forestgreen" id="fullName" name="fullName" value="@Model.FullName" border="0" />
            <input style="color:forestgreen" id="state" name="state" value="@Model.State" border="0" />
            <input style="color:forestgreen" id="dOB" name="dOB" value="@Model.DOB" border="0" />
            <input style="color:forestgreen" id="placeOfBirth" name="placeOfBirth" value="@Model.PlaceOfBirth" border="0" />
            <input style="color:forestgreen" id="kuwaitAddress" name="kuwaitAddress" value="@Model.KuwaitAddress" border="0" />
            <input style="color:forestgreen" id="educationStage" name="educationStage" value="@Model.EducationStage" border="0" />
            <input style="color:forestgreen" id="educationLevel" name="educationLevel" value="@Model.EducationLevel" border="0" />
            <input style="color:forestgreen" id="expetctedCertificate" name="expetctedCertificate" value="@Model.ExpetctedCertificate" border="0" />
            <input style="color:forestgreen" id="isStillEducating" name="isStillEducating" value="@isStillEducatingResult" border="0" />
            <input style="color:forestgreen" id="hostCountryAddress" name="hostCountryAddress" value="@Model.HostCountryAddress" border="0" />
        }

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#btnSubmit").click(function () {
                    $("input[name='ExportData']").val($("#PrintPDF").html());
                });
            });
        </script>
    </div>
</div>