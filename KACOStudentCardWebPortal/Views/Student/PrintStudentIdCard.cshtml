@model BOL.StudentView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 9pt;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div id="PrintPDF">
            <table cellpadding="0" cellspacing="0" style="border: 0px;font-size: 0pt;">
                <tr>
                    <th style=""> </th>
                    <th style=""> </th>
                </tr>

                <tr>
                    <td style="width:120px;border: 0px"> </td>

                </tr>
            </table>
        </div>
        <br />

        @using (Html.BeginForm("ExportStudentIdCard", "Student", FormMethod.Post))
        {
            <input type="hidden" name="ExportData" />
            <input type="submit" id="btnSubmit" value="Export" />
            @*<img id="studentImage" name="studentImage" src="~/image/getImage/@Model.ImageId" />*@
            <input value="@Model.ImageId" id="imageId" name="imageId" />
            <input style="color:darkorange" id="registrationNo" name="registrationNo" value="@Model.RegistrationNo" border="0" />
            <input style="color:forestgreen" id="fullName" name="fullName" value="@Model.FullName" border="0" />
            <input style="color:forestgreen" id="placeOfBirth" name="educationLevel" value="@Model.EducationLevel" border="0" />
            <input style="color:forestgreen" id="collegeName" name="collegeName" value="@Model.CollegeName" border="0" />
            <input style="color:forestgreen" id="universityName" name="universityName" value="@Model.UniversityName" border="0" />
            <input style="color:forestgreen" id="nationalIDNo" name="nationalIDNo" value="@Model.NationalIDNo" border="0" />
            <input style="color:forestgreen" id="passportNo" name="passportNo" value="@Model.PassportNo" border="0" />
            <input style="color:forestgreen" id="createdOn" name="createdOn" value="@Model.CreatedOn" border="0" />
        }

        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#btnSubmit").click(function () {
                    $("input[name='ExportData']").val($("#PrintPDF").html());
                });
            });
        </script>
    </div>
</div>